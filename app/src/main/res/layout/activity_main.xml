<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtInputUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/txtHint"
        android:text=""
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_dark"
        android:autofillHints="@string/txtHint" />

    <Button
        android:id="@+id/btnMake"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/make"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btnGrow"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_above="@id/btnMake"
        android:layout_toRightOf="@id/btnShop"
        android:layout_toEndOf="@id/btnShop"
        android:text="@string/grow"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btnShop"
        android:layout_width="132dp"
        android:layout_height="62dp"
        android:layout_alignBottom="@id/btnMake"
        android:layout_toStartOf="@id/btnMake"
        android:text="@string/shop"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btnEat"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_below="@id/btnMake"
        android:layout_toStartOf="@id/btnCook"
        android:text="@string/eat"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored" />

    <Button
        android:id="@+id/btnCook"
        android:layout_width="120dp"
        android:layout_height="62dp"
        android:layout_alignBottom="@id/btnMake"
        android:layout_toEndOf="@id/btnMake"
        android:text="@string/cook"
        android:textSize="20sp"
        style="@style/Widget.AppCompat.Button.Colored" />


</RelativeLayout>